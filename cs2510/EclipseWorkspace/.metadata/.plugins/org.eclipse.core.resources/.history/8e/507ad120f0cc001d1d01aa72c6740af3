import java.util.ArrayList;
import java.util.Random;
import tester.Tester;
import javalib.impworld.*;
import java.awt.Color;
import javalib.worldimages.*;

//Represents a single square of the game area
class Cell {
  // In logical coordinates, with the origin at the top-left corner of the screen
  int x;
  int y;
  Color color;
  boolean flooded;
  // the four adjacent cells to this one
  Cell left;
  Cell top;
  Cell right;
  Cell bottom;

  public Cell(int x, int y, Color c) {
    this.x = x;
    this.y = y;
    this.color = c;
  }
  
  WorldImage drawCell() {
    return new RectangleImage(this.x + FloodItWorld.CELL_SIZE , this.y + FloodItWorld.CELL_SIZE, OutlineMode.SOLID, this.color);
  }
}

class FloodItWorld extends World {
  // All the cells of the game
  static int SCREEN_SIZE = 400;
  static int CELL_SIZE = 40;
      
  @SuppressWarnings("serial")
  ArrayList<Color> colors = new ArrayList<Color>() {
    {
      add(Color.blue);
      add(Color.green);
      add(Color.red);
      add(Color.black);
      add(Color.orange);
      add(Color.yellow);
      add(Color.cyan);
      add(Color.pink);
    }
  };

  ArrayList<Cell> board;

  WorldImage world;

  int x_inset;
  int y_inset;
  
  public FloodItWorld(int size, int numColors) {
    this.board = new ArrayList<Cell>(size * size);
    this.x_inset = SCREEN_SIZE - (size * CELL_SIZE);
    this.y_inset = SCREEN_SIZE - (size * CELL_SIZE);
    Random random = new Random();
    for(int i = 0; i < size; i++) {
      for (int j = 0; j < size; j++) {
        Color color = colors.get(random.nextInt(numColors));
        this.board.add(new Cell(i * CELL_SIZE + this.x_inset, j * CELL_SIZE + this.y_inset, color));
      }
    }
    System.out.println(this.board.size());
    
    this.drawWorld();
  }

  @Override
  public WorldScene makeScene() {
    WorldScene background = new WorldScene(SCREEN_SIZE, SCREEN_SIZE);
    
    background.placeImageXY(this.world, 0, 0);
    return background;
  }
  
  
  public void drawWorld() {
    WorldImage world = new RectangleImage(0, 0, OutlineMode.SOLID, Color.black);
    for (Cell cell: this.board) {
        world = new OverlayImage(world, cell.drawCell());
    }
    this.world = world;
  }
}

class ExamplesFloodIt {
  FloodItWorld starterWorld = new FloodItWorld(5, 4);
  
  void testWorld(Tester t) {
    this.starterWorld.bigBang(FloodItWorld.SCREEN_SIZE, FloodItWorld.SCREEN_SIZE, 1);
  }
}
